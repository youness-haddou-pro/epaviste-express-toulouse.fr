---
interface Props { phoneCompact: string }
const { phoneCompact } = Astro.props;
---
<div class="fixed bottom-0 left-0 right-0 z-50 border-t border-gray-200 bg-white/95 backdrop-blur md:hidden">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3">
    <div class="text-sm">
      <p class="font-medium">Besoin d’un épaviste ?</p>
      <p class="text-gray-600">Intervention 1–2 h • 9h–22h</p>
    </div>
    <a href={`tel:${phoneCompact}`} class="inline-flex items-center gap-2 rounded-xl bg-emerald-600 px-4 py-2 font-semibold text-white shadow hover:bg-emerald-700 focus:outline-none focus:ring-4 focus:ring-emerald-300">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        class="h-5 w-5"
        aria-hidden="true"
        focusable="false"
        fill="currentColor"
      >
        <path d="M2.25 3.75A1.5 1.5 0 0 1 3.75 2.25h2.77c.63 0 1.2.4 1.4.98l.99 2.85c.18.52.05 1.1-.34 1.5l-1.7 1.7a16.76 16.76 0 0 0 7.12 7.12l1.7-1.7c.4-.39.98-.52 1.5-.34l2.85.99c.58.2.98.77.98 1.4v2.77a1.5 1.5 0 0 1-1.5 1.5H18c-8.56 0-15.5-6.94-15.5-15.5v-1.5z"/>
