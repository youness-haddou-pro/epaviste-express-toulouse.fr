---
import type { } from "astro";
interface Data {
  phone: string; phoneCompact: string; name: string;
}
import { Picture } from 'astro:assets';
import hero from '@/assets/images/hero/hero-pro.jpg'; 

const { data } = Astro.props as { data: Data };
const widths = [640, 960, 1280, 1600, 1920, 2240];
const sizes  = '100vw';
---

<section class="relative overflow-hidden text-white">
  <!-- Image de fond en couverture -->
  <div class="absolute inset-0">
    <Picture
      src={hero}
      alt="Intervention professionnelle d’épaviste à Toulouse"
      widths={widths}
      sizes={sizes}
      formats={['avif', 'webp']}   /* + fallback auto (JPEG d’origine) */
      loading="eager"              /* indispensable pour le LCP */
      fetchpriority="high"         /* priorité haute pour Google Lighthouse */
      decoding="async"
      class="h-full w-full object-cover rounded-none"
      style="aspect-ratio: 16/9;"
    />
    <!-- Overlay sombre pour lisibilité -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Contenu -->
  <div class="mx-auto max-w-6xl px-6 py-16 md:py-24 relative top-[-50px]">
    <div class="max-w-2xl">
      <h1 class="text-3xl font-extrabold leading-tight md:text-5xl">
        Épaviste à Toulouse — enlèvement 
        <span class="underline decoration-white/40 underline-offset-4">gratuit</span> & 
        <span class="text-emerald-400 italic">express</span> en moins de 2h
      </h1>
      <p class="mt-4 max-w-xl text-white/90 md:text-lg">
        Intervention 7j/7 de 9h à 22h, certificat de destruction fourni <span class="whitespace-nowrap">(avec ou sans carte grise)</span>, zéro frais cachés. Rayon d’action : Toulouse et 100 km.
      </p>

      <!-- Boutons -->
      <div class="mt-6 flex flex-wrap items-center gap-3">
        <a href={`tel:${data.phoneCompact}`} class="inline-flex items-center gap-2 rounded-2xl bg-white px-5 py-3 font-semibold text-emerald-700 shadow-lg shadow-black/20 transition hover:-translate-y-0.5 hover:shadow-xl">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="h-5 w-5"
            aria-hidden="true"
            focusable="false"
            fill="currentColor"
          >
            <path d="M2.25 3.75A1.5 1.5 0 0 1 3.75 2.25h2.77c.63 0 1.2.4 1.4.98l.99 2.85c.18.52.05 1.1-.34 1.5l-1.7 1.7a16.76 16.76 0 0 0 7.12 7.12l1.7-1.7c.4-.39.98-.52 1.5-.34l2.85.99c.58.2.98.77.98 1.4v2.77a1.5 1.5 0 0 1-1.5 1.5H18c-8.56 0-15.5-6.94-15.5-15.5v-1.5z"/>
          </svg>
          {data.phone}
        </a>
        <a href="#contact" class="inline-flex items-center gap-2 rounded-2xl bg-emerald-700 px-5 py-3 font-semibold text-white ring-1 ring-inset ring-white/30 backdrop-blur hover:bg-emerald-500/40">
          Demander un rappel
        </a>
      </div>

      <!-- Cartes -->
      <div class="mt-6 grid grid-cols-1 gap-3 text-sm sm:grid-cols-3">
        <!-- CARD 1 -->
        <div class="group relative flex items-center justify-center rounded-2xl bg-white/10 px-4 py-3 uppercase text-xs font-medium ring-1 ring-white/20 transition-all duration-300 hover:-translate-y-1 hover:bg-white/15 hover:shadow-xl hover:shadow-black/30 cursor-pointer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            class="h-5 w-5 opacity-90 mr-2 transition-transform duration-300 group-hover:scale-110"
            aria-hidden="true"
            focusable="false"
            fill="currentColor"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm3.78-10.28a.75.75 0 0 0-1.06-1.06L9 10.38 7.28 8.66a.75.75 0 1 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.06 0l4.25-4.25z"
            />
          </svg>
          RC Pro assurée
        </div>

        <!-- CARD 2 -->
        <div class="group relative flex items-center justify-center rounded-2xl bg-white/10 px-4 py-3 uppercase text-xs font-medium ring-1 ring-white/20 transition-all duration-300 hover:-translate-y-1 hover:bg-white/15 hover:shadow-xl hover:shadow-black/30 cursor-pointer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="h-5 w-5 opacity-90 mr-2 transition-transform duration-300 group-hover:scale-110"
            aria-hidden="true"
            focusable="false"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="8" />
            <path d="M12 12l4 2" />
          </svg>
          ≈ 800 épaves / an
        </div>

        <!-- CARD 3 -->
        <div class="group relative flex items-center justify-center rounded-2xl bg-white/10 px-4 py-3 uppercase text-xs font-medium ring-1 ring-white/20 transition-all duration-300 hover:-translate-y-1 hover:bg-white/15 hover:shadow-xl hover:shadow-black/30 cursor-pointer">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            class="h-5 w-5 opacity-90 mr-2 transition-transform duration-300 group-hover:scale-110"
            aria-hidden="true"
            focusable="false"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <circle cx="12" cy="12" r="8" />
            <path d="M12 8v4l3 2" />
          </svg>
          Certificat sous ~1 mois
        </div>
      </div>
    </div>
  </div>

  <!-- Dégradé bas de section -->
  <div class="pointer-events-none absolute inset-x-0 bottom-0 h-24 bg-gradient-to-b from-black/20 to-gray-50"></div>
</section>
