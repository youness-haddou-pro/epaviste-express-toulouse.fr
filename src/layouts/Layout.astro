---
export interface Props {
  title: string;
  description: string;
  ogImage?: string;
  jsonld?: any;
  lang?: string;
}
const { title, description, ogImage = "/images/epaviste-hero.png", jsonld, lang = "fr" } = Astro.props;
const canonical = Astro.url?.href ?? '/';

import "../styles/global.css";
import Base from "./Base.astro";
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical}/>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={ogImage} />

    <!-- Favicons / PWA / Apple -->
    <Base />

    {jsonld && <script type="application/ld+json" set:html={JSON.stringify(jsonld)}></script>}

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17527073084"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17527073084');
    </script>

    <!-- Suivi des clics sur numéro (conversion Google Ads) -->
    <script>
      const SEND_TO = 'AW-17527073084/2iUaCK_4rZMbELzSx6VB';

      function trackTelClicks() {
        const links = document.querySelectorAll('a[href^="tel:"]');
        links.forEach(a => {
          a.addEventListener('click', () => {
            if (typeof gtag === 'function') {
              gtag('event', 'conversion', {
                'send_to': SEND_TO,
                'value': 1.0,
                'currency': 'EUR'
              });
              console.log('[Ads] Conversion envoyée pour clic tel:', a.href);
            }
          }, { passive: true });
        });
      }

      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', trackTelClicks);
      } else {
        trackTelClicks();
      }
    </script>
  </head>
  <body class="min-h-screen bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>
